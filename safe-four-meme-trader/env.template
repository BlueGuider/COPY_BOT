# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram chat ID (get it by messaging @userinfobot)
TELEGRAM_CHAT_ID=your_chat_id_here

# Enable/disable Telegram bot
TELEGRAM_ENABLED=true

# Copy Trading Configuration
COPY_TRADING_ENABLED=true
TEST_MODE=false

# Wallet Configuration
DEFAULT_USER_ID=copy-trading-bot
MIN_WALLET_BALANCE=0.01

# Trading Configuration
DEFAULT_COPY_RATIO=0.1
DEFAULT_SLIPPAGE=5.0

# Gas Strategy (choose one)
# GAS_PRICE_MODE can be 'network' (use RPC gasPrice with multiplier) or 'fixed'
GAS_PRICE_MODE=network

# When GAS_PRICE_MODE=network
GAS_PRICE_MULTIPLIER=1.0
MIN_GAS_PRICE=3
MAX_GAS_PRICE=30

# When GAS_PRICE_MODE=fixed
# FIXED_GAS_PRICE=5

# Optional: future replacement strategy bump percent
# GAS_BUMP_PERCENT=15

# Network Configuration
RPC_URL=https://bsc-dataseed1.binance.org/
CHAIN_ID=56
